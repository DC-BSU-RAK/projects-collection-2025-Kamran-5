<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0E68C"/> <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#C1B072"/> </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFACD"/> <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#DAA520"/> </shape>
    </item>
</selector>