<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#50DAA520"/> <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#B8860B"/> </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#DAA520"/> </shape>
    </item>
</selector>