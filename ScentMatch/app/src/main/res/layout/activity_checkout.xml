<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card View style background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/checkout_card_bg"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/checkoutImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/perfume1"
                android:background="@drawable/image_rounded_corners"
                android:clipToOutline="true" />

            <TextView
                android:id="@+id/checkoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfume Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/checkoutPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $69.99"
                android:textSize="18sp"
                android:textColor="#388E3C"
                android:layout_marginTop="8dp" />

            <!-- Inputs -->
            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_field_bg"
                android:padding="14dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shipping Address"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_field_bg"
                android:padding="14dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Flat Number"
                android:inputType="number"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_field_bg"
                android:padding="14dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Purchase"
                android:layout_marginTop="24dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
