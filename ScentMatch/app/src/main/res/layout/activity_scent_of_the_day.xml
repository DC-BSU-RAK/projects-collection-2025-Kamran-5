<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="24dp">

    <!-- Perfume Icon at the Top -->
    <ImageView
        android:id="@+id/perfume_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_perfume"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:contentDescription="Perfume Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/scent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scent of the Day"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#BF360C"
        android:layout_below="@id/perfume_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <!-- Framed Scent Text -->
    <TextView
        android:id="@+id/scent_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scent_box_bg"
        android:text="Loading scent..."
        android:textSize="20sp"
        android:textColor="#4E342E"
        android:layout_below="@id/scent_title"
        android:layout_marginTop="24dp"
        android:padding="20dp"
        android:gravity="center"
        android:elevation="4dp"
        android:layout_marginHorizontal="12dp" />

    <!-- Get Another Scent Button -->
    <Button
        android:id="@+id/btn_new_scent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Another Scent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/rounded_orange_button"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scent_text"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/rounded_orange_button"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_new_scent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:elevation="4dp" />

</RelativeLayout>
